
{% extends 'ContactBundle::base.html.twig' %}

{% block title %}Formulaire de contact{% endblock %}

{% block body %}


{% image '@ContactBundle/Web/images/preloader.gif' %}
    <script> var LoadStatusText = '<img src="{{ asset_url }}"/> envoi en cours...'; </script>
{% endimage %}


<div class="container">

    <div class="jumbotron">

        <h1 class="display-3 title-box" style="margin-bottom:40px">Contact</h1>
        <p class="lead">Merci de renseigner votre email ainsi que votre mot de passe<br>afin d'accéder au formulaire de contact.</p><br>

       
        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

        	<div class="formContainer">

	            <div class="form-group row">

	                {{ form_label(form.prenom, "Prénom", {'label_attr': {'class': 'col-sm-3 col-form-label'}}) }}
	                {{ form_errors(form.prenom) }}

	                <div class="col-sm-9">
	                    {{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
	                </div>

	            </div>

	            <div class="form-group row">

	                {{ form_label(form.nom, "Nom", {'label_attr': {'class': 'col-sm-3 col-form-label'}}) }}
	                {{ form_errors(form.nom) }}

	                <div class="col-sm-9">
	                    {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
	                </div>

	            </div>

	            <div class="form-group row">

	                {{ form_label(form.email, "Email", {'label_attr': {'class': 'col-sm-3 col-form-label'}}) }}
	                {{ form_errors(form.email) }}

	                <div class="col-sm-9">
	                    {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
	                </div>

	            </div>

	            <div class="form-group row">

	                {{ form_label(form.telephone, "Téléphone", {'label_attr': {'class': 'col-sm-3 col-form-label'}}) }}
	                {{ form_errors(form.telephone) }}

	                <div class="col-sm-9">
	                    {{ form_widget(form.telephone, {'attr': {'class': 'form-control'}}) }}
	                </div>

	            </div>

	            <div class="form-group row">

	                {{ form_label(form.message, "Message", {'label_attr': {'class': 'col-sm-3 col-form-label'}}) }}
	                {{ form_errors(form.message) }}

	                <div class="col-sm-9">
	                    {{ form_widget(form.message, {'attr': {'class': 'form-control'}}) }}
	                </div>

	            </div>

            </div>

            <div id="form_submit"></div>

            {{ form_widget(form.valider, {'attr': {'class': 'btn btn-lg btn-success'}}) }}


        {{ form_end(form) }}


	</div>

</div>


{% endblock %}