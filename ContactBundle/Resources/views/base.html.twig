<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}{% endblock %}</title>

        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

        {% javascripts '@ContactBundle/Web/js/ajax/ajax.js' %}
            <script src="{{ asset_url }}"></script>
        {% endjavascripts %}

        {% stylesheets 
            '@ContactBundle/Web/css/main.css' 
            '@ContactBundle/Web/css/bootstrap-4.0.0/css/bootstrap.min.css' 
        %}
            <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}

        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />

    </head>

    <body>

        <div class="container">
            <div class="header clearfix">
              <h3 class="text-muted">Formulaire de contact</h3>
            </div>
        </div>

        {% block body %}{% endblock %}

    </body>
</html>